<div class="input-group mb-3 d-flex flex-column mx-auto" style="max-width: 550px;">
  <h2 class="mt-3 mb-1 mx-auto">修改記帳資料</h3>
    <div style="display: block;">
      <span class="badge badge-pill badge-warning"> 必填欄位 * </span>
    </div>

    <form action="/records/{{ record._id }}/edit" method="POST">
      {{!-- 名稱 --}}
      <div class="input-group mt-3 mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">名稱 *</span>
        </div>
        <input type="text" placeholder="請輸入支出名稱" name="name" class="form-control" aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default" value="{{ record.name }}">
      </div>
      {{!-- 日期 --}}
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">日期 *</span>
        </div>
        <input type="date" name="date" value="{{ record.date }}">
      </div>
      {{!-- 類別 --}}
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <label class="input-group-text" for="inputGroupSelect01">類別 *</label>
        </div>
        <select class="custom-select" name="category" id="inputGroupSelect01">
          <option value="家居物業" {{#ifEqual record.category "家居物業"}}selected{{/ifEqual}}>家居物業</option>
          <option value="交通出行" {{#ifEqual record.category "交通出行"}}selected{{/ifEqual}}>交通出行</option>
          <option value="休閒娛樂" {{#ifEqual record.category "休閒娛樂"}}selected{{/ifEqual}}>休閒娛樂</option>
          <option value="餐飲食品" {{#ifEqual record.category "餐飲食品"}}selected{{/ifEqual}}>餐飲食品</option>
          <option value="其他" {{#ifEqual record.category "其他"}}selected{{/ifEqual}}>其他</option>
        </select>
      </div>
      {{!-- 金額 --}}
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">金額 *</span>
        </div>
        <input type="number" placeholder="請輸入支出金額" name="amount" class="form-control" id="length" min="0"
          value="{{ record.amount }}">
      </div>
      <div class="button-group d-flex justify-content-center mt-3">
        <button class="btn btn-warning mr-5" type="submit">修改</button>
        <a href="/" class="btn btn-outline-primary">取消</a>
      </div>
    </form>
</div>