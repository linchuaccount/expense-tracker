<div class="row text-center justify-content-center">
  <div class="col-md-6 order-md-2 mb-4">

    <div class="row mt-3 d-flex justify-content-between">
      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">支出清單</span>
      </h4>
      <div class="dropdown col-md-4 order-md-2 mb-4 col-6">
        <button class="btn btn-light dropdown-toggle btn-lg" type="button" id="dropdownMenu2" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          分類
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
          <button class="dropdown-item" type="button">Action</button>
        </div>
      </div>
    </div>

    {{#each records}}
    <div class="row justify-content-center border border-dark mb-1">
      <div class="col-2 category-img">
        <span style="font-size: 2.5em; color: rgb(245, 139, 120);">
          <i class="fas {{this.icon}}"></i>
        </span>
      </div>
      <div class="col-6">
        <h6 class="my-0 mt-2">
          {{this.name}}
        </h6>
        <small class="text-muted mt-2">
          {{this.date}}
        </small>
      </div>
      <div class="col-2 amount">
        <h4 class="mt-2">
          ${{this.amount}}
        </h4>
      </div>
    </div>
    {{/each}}

    <div class="row justify-content-center mt-4">
      <a href="" class="btn btn-warning">新增記帳</a>
    </div>
  </div>
</div>