<div class="input-group mb-3 d-flex flex-column" style="max-width: 600px;">
  <h2 class="mt-3 mb-1 mx-auto">新增記帳</h3>
    <div style="display: block;">
      <span class="badge badge-pill badge-warning"> 必填欄位 * </span>
    </div>

    <form action="/records" method="POST">
      <div class="input-group mt-3 mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">名稱 *</span>
        </div>
        <input type="text" placeholder="請輸入支出名稱" name="name" class="form-control" aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default">
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">日期 *</span>
        </div>
        <input type="date" name="date">
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <label class="input-group-text" for="inputGroupSelect01">類別 *</label>
        </div>
        <select class="custom-select" name="category" id="inputGroupSelect01">
          <option value="家居物業">家居物業</option>
          <option value="交通出行">交通出行</option>
          <option value="休閒娛樂">休閒娛樂</option>
          <option value="餐飲食品">餐飲食品</option>
          <option value="其他">其他</option>
        </select>
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">金額 *</span>
        </div>
        <input type="number" placeholder="請輸入支出金額" name="amount" class="form-control" id="length" min="0">
      </div>
      <div class="button-group d-flex justify-content-center mt-3">
        <button class="btn btn-warning mr-5" type="submit">新增</button>
        <a href="/" class="btn btn-outline-primary">取消</a>
      </div>
    </form>
</div>