<div class="col-4 m-auto">
  {{> message}}
  <form action="/users/register" method="POST" class="form-signin mt-4">
    <h1 class="text-center my-3">註冊帳號</h1>
    <div Class="mb-2">
      <label for="name" class="form-label">姓名</label>
      <input type="text" id="name" name="name" class="form-control" placeholder="請輸入姓名" value="{{name}}">
    </div>
    <div Class="mb-2">
      <label for="email" class="form-label">信箱</label>
      <input type="email" id="email" name="email" class="form-control" placeholder="請輸入Email" value="{{email}}">
    </div>
    <div Class="mb-2">
      <label for="password" class="form-label">密碼</label>
      <input type="password" id="password" name="password" class="form-control" placeholder="請輸入密碼"
        value="{{password}}">
    </div>
    <div Class="mb-2">
      <label for="confirmPassword" class="form-label">確認密碼</label>
      <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="請再次輸入密碼"
        value="{{confirmPassword}}">
    </div>
    <button class="btn btn-lg btn-warning btn-block mt-3" type="submit">註冊</button>
    <a href="/auth/facebook" class="btn btn-lg btn-info btn-block">Facebook 註冊</a>
    <hr>
    <p>已有帳號?</p>
    <a href="/users/login" class="btn btn-lg btn-primary btn-block mt-3">立即登入</a>
  </form>
</div>