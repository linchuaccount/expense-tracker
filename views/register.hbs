<div class="col-4 m-auto">
  <form action="/users/register" method="POST" class="form-signin mt-4">
    <h1 class="text-center my-3">註冊帳號</h1>
    <div Class="mb-2">
      <label for="name" class="form-label">姓名</label>
      <input type="name" id="name" class="form-control" placeholder="請輸入姓名" required="required">
    </div>
    <div Class="mb-2">
      <label for="email" class="form-label">信箱</label>
      <input type="email" id="email" class="form-control" placeholder="請輸入Email" required="required">
    </div>
    <div Class="mb-2">
      <label for="password" class="form-label">密碼</label>
      <input type="password" id="password" class="form-control" placeholder="請輸入密碼" required="required">
    </div>
    <div Class="mb-2">
      <label for="confirmPassword" class="form-label">確認密碼</label>
      <input type="confirmPassword" id="confirmPassword" class="form-control" placeholder="請再次輸入密碼" required="required">
    </div>
    <button class="btn btn-lg btn-warning btn-block mt-3" type="submit">註冊</button>
    <hr>
    <p>已有帳號?</p>
    <a href="/users/login" class="btn btn-lg btn-primary btn-block mt-3">立即登入</a>
  </form>
</div>